<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_15sdp"
    android:paddingTop="@dimen/_15sdp"
    android:paddingRight="@dimen/_15sdp"
    android:background="@color/page_bg_color"
    tools:context=".fragments.flipkartform.photoflipkart.PhotoFlipkartFormFragment">


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_100sdp"
        android:id="@+id/dancer"
        android:scaleType="fitXY"
        android:src="@drawable/flipkart_gif" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="4sp"
                android:background="@drawable/points_bg"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/brand_cert_img"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:scaleType="fitCenter"
                    android:layout_marginRight="@dimen/_5sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_1sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/text_bg"
                            android:gravity="start"
                            android:fontFamily="@font/inter_medium_500"
                            android:textSize="@dimen/_11ssp"
                            android:paddingLeft="@dimen/_4sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingRight="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:text="Brand Certificates / Purchase Invoices Photos Upload(Not mandatory)"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/text_bg"
                            android:gravity="start"
                            android:fontFamily="@font/inter_medium_500"
                            android:textSize="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_4sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingRight="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:text="JPEG/PNG Upto 5mb"
                            />


                    </LinearLayout>


                    <ImageView
                        android:id="@+id/add1"
                        android:layout_width="@dimen/_27sdp"
                        android:layout_height="@dimen/_27sdp"
                        android:scaleType="fitCenter"
                        android:padding="@dimen/_7sdp"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@drawable/circuler_btn"
                        android:src="@drawable/ic_baseline_add_24" />



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="4sp"
                android:background="@drawable/points_bg"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/registration_screen_img"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:scaleType="fitCenter"
                    android:layout_marginRight="@dimen/_5sdp"
                   />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_1sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/text_bg"
                            android:gravity="start"
                            android:fontFamily="@font/inter_medium_500"
                            android:textSize="@dimen/_11ssp"
                            android:paddingLeft="@dimen/_4sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingRight="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:text="Registration  Screen Shorts (1st page screen short)\n85 % होना चाहिए "
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/text_bg"
                            android:gravity="start"
                            android:fontFamily="@font/inter_medium_500"
                            android:textSize="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_4sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingRight="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:text="JPEG/PNG Upto 5mb"
                            />


                    </LinearLayout>


                    <ImageView
                        android:id="@+id/add2"
                        android:layout_width="@dimen/_27sdp"
                        android:layout_height="@dimen/_27sdp"
                        android:scaleType="fitCenter"
                        android:padding="@dimen/_7sdp"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@drawable/circuler_btn"
                        android:src="@drawable/ic_baseline_add_24" />



                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="4sp"
                android:background="@drawable/points_bg"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bank_ver_img"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:scaleType="fitCenter"
                    android:layout_marginRight="@dimen/_5sdp"
                     />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_1sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/text_bg"
                            android:gravity="start"
                            android:fontFamily="@font/inter_medium_500"
                            android:textSize="@dimen/_11ssp"
                            android:paddingLeft="@dimen/_4sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingRight="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:text="Bank Verification Screenshot (Verification should be Done )
\nBank Name should be Match from Trade Name &amp; Company name
\n(बिना बैंक अकाउंट के Onboarding काउंट नहीं होगी)"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/text_bg"
                            android:gravity="start"
                            android:fontFamily="@font/inter_medium_500"
                            android:textSize="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_4sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingRight="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:text="JPEG/PNG Upto 5mb"
                            />


                    </LinearLayout>


                    <ImageView
                        android:id="@+id/add3"
                        android:layout_width="@dimen/_27sdp"
                        android:layout_height="@dimen/_27sdp"
                        android:scaleType="fitCenter"
                        android:padding="@dimen/_7sdp"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@drawable/circuler_btn"
                        android:src="@drawable/ic_baseline_add_24" />



                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="4sp"
                android:background="@drawable/points_bg"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/store_pic_img"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:scaleType="fitCenter"
                    android:layout_marginRight="@dimen/_5sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_1sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/text_bg"
                            android:gravity="start"
                            android:fontFamily="@font/inter_medium_500"
                            android:textSize="@dimen/_11ssp"
                            android:paddingLeft="@dimen/_4sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingRight="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:text="Store Pics with GPS"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/text_bg"
                            android:gravity="start"
                            android:fontFamily="@font/inter_medium_500"
                            android:textSize="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_4sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingRight="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:text="JPEG/PNG Upto 5mb"
                            />


                    </LinearLayout>


                    <ImageView
                        android:id="@+id/add4"
                        android:layout_width="@dimen/_27sdp"
                        android:layout_height="@dimen/_27sdp"
                        android:scaleType="fitCenter"
                        android:padding="@dimen/_7sdp"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@drawable/circuler_btn"
                        android:src="@drawable/ic_baseline_add_24" />



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorAccent"
            android:text="Next" />

    </LinearLayout>

</LinearLayout>