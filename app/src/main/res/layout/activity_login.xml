<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp"
    tools:context=".activity.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Login"
        android:fontFamily="@font/rubik_medium"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_27ssp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Please login with your credentials"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/inter_medium_500"
        android:textColor="@color/back_icon_color"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/inter_medium_500"
        android:text="Select Type"
        android:textSize="@dimen/_10ssp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/grey" />

    <RadioGroup
        android:id="@+id/teamleader_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/Sumit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Agency Partner"
            android:textSize="@dimen/_15ssp" />

        <RadioButton
            android:id="@+id/Vivek"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Gig Partner"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_15ssp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Phone Number"
            android:fontFamily="@font/inter_medium_500"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_10ssp"
            />
        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/points_bg"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="number" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Password"
            android:fontFamily="@font/inter_medium_500"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_10ssp"
            />
        <EditText
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/points_bg"
            android:hint="Password"
            android:ems="10"
            android:inputType="numberPassword"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/inter_medium_500"
        android:singleLine="true"
        android:text="Forgot Password?"
        android:textColor="@color/back_icon_color"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginTop="@dimen/_20sdp"
        android:textAllCaps="false"
        android:text="Submit" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="if don't have an account?"
            android:fontFamily="@font/inter_medium_500"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_10ssp"
            />

        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="SignUp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:fontFamily="@font/inter_medium_500"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/back_icon_color"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone"
        />

</LinearLayout>