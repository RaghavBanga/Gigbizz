<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_7sdp"
    android:layout_marginLeft="@dimen/_7sdp"
    android:layout_marginRight="@dimen/_7sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:src="@drawable/history"
                android:layout_marginLeft="@dimen/_6sdp"
                android:padding="@dimen/_4sdp"
                android:backgroundTint="@color/white"
                app:civ_circle_background_color="@color/white"
                app:civ_border_color="@color/grey1"
                app:civ_border_width="1dp" />

            <!--            <ImageView-->
            <!--                android:id="@+id/logo"-->
            <!--                android:layout_width="@dimen/_45sdp"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:backgroundTint="@color/white"-->
            <!--                android:padding="@dimen/_2sdp"-->
            <!--                android:scaleType="fitCenter"-->
            <!--                android:src="@drawable/fulllogonew"-->
            <!--                />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:paddingLeft="@dimen/_5sdp">

            <TextView
                android:id="@+id/comp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Transaction History"
                android:textColor="@color/back_icon_color"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:singleLine="true"
                android:text="Request Date:  2022-12-01"
                android:textColor="@color/grey1"
                android:textSize="@dimen/_11ssp" />
            <TextView
                android:id="@+id/paymentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangular_bg"
                android:backgroundTint="@color/colorAccent"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Pending"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

        <TextView
            android:id="@+id/rupees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:fontFamily="@font/inter_medium_500"
            android:layout_gravity="center_vertical"
            android:text="Rs. 500"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/green" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--            <ImageView-->
            <!--                android:id="@+id/newbanner"-->
            <!--                android:layout_width="@dimen/_30sdp"-->
            <!--                android:layout_height="@dimen/_30sdp"-->
            <!--                android:backgroundTint="@color/white"-->
            <!--                android:padding="@dimen/_2sdp"-->
            <!--                android:src="@drawable/new_offer"-->
            <!--                app:tint="@color/red" />-->

            <!--            <ImageView-->
            <!--                android:layout_width="@dimen/_20sdp"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:backgroundTint="@color/white"-->
            <!--                android:padding="@dimen/_2sdp"-->
            <!--                android:src="@drawable/ic_baseline_arrow_forward_ios_24"-->
            <!--                app:tint="@color/colorAccent" />-->

        </FrameLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
