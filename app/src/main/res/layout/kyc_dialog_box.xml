<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:paddingBottom="@dimen/_10sdp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="end"
        android:layout_margin="@dimen/_5sdp"
        android:background="?selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_baseline_cancel_24"
        app:tint="@color/grey1" />

    <ImageView
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_weight="1"
        app:srcCompat="@drawable/kyc_dialog_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete Your Kyc"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_15ssp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete Your Kyc to avail the active \ntasks and earn Money"
            android:gravity="center"
            android:textSize="@dimen/_10ssp"
            />

    </LinearLayout>




<!--    <EditText-->
<!--        android:id="@+id/editTextPhone"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/_30sdp"-->
<!--        android:ems="10"-->
<!--        android:hint="Enter Amount"-->
<!--        android:gravity="center"-->
<!--        android:layout_marginLeft="@dimen/_10sdp"-->
<!--        android:layout_marginRight="@dimen/_10sdp"-->
<!--        android:layout_marginTop="@dimen/_10sdp"-->
<!--        android:background="@drawable/points_bg"-->
<!--        android:inputType="phone" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:padding="@dimen/_2sdp">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:paddingRight="@dimen/_5sdp"
            app:strokeColor="@color/back_icon_color"
            app:strokeWidth="@dimen/_1sdp"
            app:cardCornerRadius="@dimen/_7sdp">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Cancel"
                android:drawableTint="@color/back_icon_color"
                android:drawableLeft="@drawable/ic_baseline_cancel_24"
                android:textAllCaps="false"
                android:gravity="center"
                android:textSize="@dimen/_9ssp" />

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="@dimen/_7sdp">

            <TextView
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Done"
                android:drawableLeft="@drawable/ic_baseline_check_circle_24"
                android:textAllCaps="false"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_9ssp" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>



</LinearLayout>