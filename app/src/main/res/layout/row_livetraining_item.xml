<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainitem"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_1sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/round"
                android:layout_margin="@dimen/_8sdp"
                android:backgroundTint="@color/white"
                android:src="@drawable/live_training"
                android:padding="@dimen/_10sdp"
                app:tint="@color/colorAccent" />

<!--            <ImageView-->
<!--                android:id="@+id/logo"-->
<!--                android:layout_width="@dimen/_45sdp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:backgroundTint="@color/white"-->
<!--                android:padding="@dimen/_2sdp"-->
<!--                android:scaleType="fitCenter"-->
<!--                android:src="@drawable/fulllogonew"-->
<!--                />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingLeft="@dimen/_10sdp">

            <TextView
                android:id="@+id/trainingtittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Larus Company"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/trainingtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:singleLine="true"
                android:text="Today|01:30 PM - 03:10 PM"
                android:textColor="@color/grey1"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/enrollme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:backgroundTint="@color/colorAccent"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Join Now"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/alreadyenroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:singleLine="true"
                android:text="Enrolled"
                android:visibility="gone"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp" />


        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/liveicon"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:backgroundTint="@color/white"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/live"/>

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                app:tint="@color/colorAccent" />

        </FrameLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
